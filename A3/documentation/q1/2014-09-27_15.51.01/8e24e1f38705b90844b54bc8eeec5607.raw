    <!-- Contact Modal   -->
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 style="color:#598f4b;" class="modal-title" id="myModalLabel">Contact MassRoots</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label style="color:#598f4b;">Email Address</label>
                  <input type="email" class="form-control" name="contact_email">
                </div>
                <div class="form-group">
                  <label style="color:#598f4b;">Subject</label>
                  <input type="text" class="form-control" name="contact_subject">
                </div>
                
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label style="color:#598f4b;">Message</label>
                  <textarea class="form-control" rows="5" name="contact_message"></textarea>
                </div>

              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button id="contact-btn" class="btn btn-success">Send</button>
          </div>
        </div>
      </div>
    </div>

    <script>
    $('#contact-btn').click(function() {

      post_data = {
        'user_email'    : $('input[name="contact_email"]').val(), 
        'subject'       : $('input[name="contact_subject"]').val(),
        'msg'           : $('textarea[name="contact_message"]').val()
      };

      //Ajax post data to server
      $.post('contact.php', post_data, function(response){
        if(response.type == 'error'){   
          alert(response.text);
        } else {
          $('#contactModal').modal('hide');
          alert("Your message was successfully sent.");
        }
      }, 'json');

    });
</script>
